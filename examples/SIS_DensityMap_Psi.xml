<beast version="2.0" namespace="beast.core
    :beast.core.parameter
    :epiinf
    :epiinf.models
    :epiinf.distribs
    :epiinf.util
    :feast.mapping">


    <tree spec="SimulatedTransmissionTree" id="tree" fileName="$(filebase).tree.newick">
        <epidemicTrajectory id="trajectory" spec="SimulatedTrajectory" maxDuration="5.0">
            <model spec="SISModel">
                <S0 spec="IntegerParameter" value="99"/>
                <infectionRate spec="RealParameter" value="0.02"/>
                <recoveryRate spec="RealParameter" value="0.1"/>
                <psiSamplingRate spec="RealParameter" value="0.1"/>
            </model>
        </epidemicTrajectory>
    </tree>

    <run spec="DensityMapper">
        <distribution spec="SMCTreeDensity" id="density" nParticles="1000">
            <treeEventList spec="TreeEventList" tree="@tree">
                <treeOrigin spec="OriginFromTrajectory" trajectory="@trajectory"/>
            </treeEventList>
            <model spec="SISModel">
                <S0 spec="IntegerParameter" value="99"/>
                <infectionRate spec="RealParameter" value="0.02"/>
                <recoveryRate spec="RealParameter" value="0.1"/>
                <psiSamplingRate idref="psi"/>
            </model>
        </distribution>

        <realParam spec="RealParameter" id="psi" value="0.1" lower="0.05" upper="0.2"/>
        <steps spec="IntegerParameter" value="11"/>

        <logger spec="Logger" logEvery="1">
            <log idref="psi"/>
            <log idref="density"/>
        </logger>

        <logger spec="Logger" logEvery="1" fileName="$(filebase).log">
            <log idref="psi"/>
            <log idref="density"/>
        </logger>
    </run>
</beast>
