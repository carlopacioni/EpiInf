<!-- Simulate an inheritance tree from the SIR epidemic model -->

<beast version='2.0' namespace='master:master.model:master.conditions:master.outputs:master.postprocessors'>
    <run spec='InheritanceTrajectory'
        simulationTime='5.0'
        samplePopulationSizes="true"
        verbosity="1">

        <model spec='Model' id='model'>
            <population spec='Population' id='S' populationName='S'/>
            <population spec='Population' id='I' populationName='I'/>

            <reaction spec='Reaction' reactionName="Infection" rate="0.01">
                S + I -> 2I
            </reaction>
            <reaction spec='Reaction' reactionName="Recovery" rate="0.2">
                I -> S
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' population='@S' size='99'/>
            <lineageSeed spec='Individual' population='@I'/>
        </initialState>

        <!-- Simulation will terminate when no lineages remain -->
        <inheritancePostProcessor spec='LineageSampler' pSample="1.0" samplingTime="4.0"/>
        <!--postSimCondition spec='LeafCountPostSimCondition' nLeaves="5" exact="true"/-->

        <output spec='NewickOutput' fileName='$(filebase)_output.nexus'/>
        <output spec='JsonOutput' fileName='$(filebase)_output.json'/>
    </run>
</beast>

