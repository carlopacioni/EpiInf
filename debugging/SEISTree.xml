<!-- Simulate a tree from the SEIS epidemic model -->

<beast version='2.0' namespace='master:master.model:master.conditions:master.outputs:master.postprocessors'>
    <run spec='InheritanceTrajectory'
        samplePopulationSizes="true"
        simulationTime="50"
        verbosity="1">

        <model spec='Model' id='model'>
            <population spec='Population' id='S' populationName='S'/>
            <population spec='Population' id='E' populationName='E'/>
            <population spec='Population' id='I' populationName='I'/>
            <population spec='Population' id='X' populationName='X'/>

            <reaction spec='Reaction' reactionName="Infection" rate="0.01">
                S:1 + I:2 -> I:2 + E:2
            </reaction>
            <reaction spec='Reaction' reactionName="Activation" rate="0.1">
                E:1 -> I:1
            </reaction>
            <reaction spec='Reaction' reactionName="Recovery" rate="0.1">
                I -> S
            </reaction>
            <reaction spec='Reaction' reactionName="Sampling" rate="0.1">
                I -> X
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' population='@S' size='99'/>
            <lineageSeed spec='Individual' population='@I'/>
        </initialState>

        <inheritancePostProcessor spec='LineageFilter' reactionName="Sampling"/>
        <postSimCondition spec='LeafCountPostSimCondition' nLeaves="20" exact="true"/>

        <output spec='NexusOutput' fileName='$(filebase)_output.nexus'/>
        <output spec='JsonOutput' fileName='$(filebase)_output.json'/>
    </run>
</beast>

